<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="com.mysap.mysapsemanticpage.controller.MySemanticPage"
    displayBlock="true"
>
    <SemanticPage
        xmlns="sap.f.semantic"
        showFooter="true"
        id="page0"
    >
        <titleHeading>
            <m:Title
                xmlns:m="sap.m"
                text="Listagem de Produtos"
                id="idSemanticPageTitle"
            />
        </titleHeading>

        <titleMainAction>
            <TitleMainAction
                text="Main Action"
                id="action0"
            />
        </titleMainAction>

        <titleCustomTextActions>
            <m:Button
                xmlns:m="sap.m"
                text="Custom Text Button"
                id="button0"
            />
        </titleCustomTextActions>

        <titleCustomIconActions>
            <m:OverflowToolbarButton
                xmlns:m="sap.m"
                icon="sap-icon://cart"
                text="Custom Icon Button"
                id="button1"
            />
        </titleCustomIconActions>

        <footerCustomActions>
            <m:Button
                xmlns:m="sap.m"
                text="Button 1"
                id="button2"
            />
        </footerCustomActions>

        <headerContent>
            <sap.ui.layout:HorizontalLayout
                xmlns:sap.ui.layout="sap.ui.layout"
                id="layout0"
            >
                <sap.ui.layout:content>
                    <sap.ui.layout:VerticalLayout
                        width="100%"
                        id="layout1"
                    >
                        <sap.ui.layout:content>
                            <sap.m:ObjectAttribute
                                text="Business"
                                xmlns:sap.m="sap.m"
                                id="attribute0"
                                title="Functional Area"
                            />

                            <sap.m:ObjectAttribute
                                text="PI Products Sofia"
                                xmlns:sap.m="sap.m"
                                id="attribute1"
                                title="Cost Center:Cost Center"
                            />

                            <sap.m:ObjectAttribute
                                text="office@piproucts.comv"
                                xmlns:sap.m="sap.m"
                                id="attribute2"
                                title="Email"
                            />
                        </sap.ui.layout:content>
                    </sap.ui.layout:VerticalLayout>

                    <sap.ui.layout:VerticalLayout
                        width="100%"
                        id="layout3"
                    />

                    <sap.ui.layout:VerticalLayout
                        width="100%"
                        id="layout2"
                    >
                        <sap.ui.layout:content>
                            <sap.m:ObjectAttribute
                                xmlns:sap.m="sap.m"
                                id="attribute3"
                                title="Availability"
                            />

                            <ObjectStatus
                                xmlns="sap.m"
                                text="In Stock"
                                state="Success"
                                id="status0"
                            />
                        </sap.ui.layout:content>
                    </sap.ui.layout:VerticalLayout>
                </sap.ui.layout:content>
            </sap.ui.layout:HorizontalLayout>

        </headerContent>



        <!-- **************************************************** -->

        <titleExpandedHeading>
            <Text
                xmlns="sap.m"
                text="text expanded heading"
                id="text9"
            />
        </titleExpandedHeading>

        <titleSnappedHeading>
            <Text
                xmlns="sap.m"
                text="bbbbbbbbbbbbb"
                id="text10"
            />
        </titleSnappedHeading>

        <titleSnappedOnMobile>
            <Title
                xmlns="sap.m"
                text="ccccccccccccccccccc"
                id="title1"
            />
        </titleSnappedOnMobile>

        <titleSnappedContent>
            <Text
                xmlns="sap.m"
                text="Lista de produtos para montar um supermercado: veja quais itens não podem faltar"
                id="text11"
            />
        </titleSnappedContent>

        <titleExpandedContent>
            <Text
                xmlns="sap.m"
                text="Lista de produtos para montar um supermercado: veja quais itens não podem faltar"
                id="text12"
            />
        </titleExpandedContent>

        <titleContent>
            <Text
                xmlns="sap.m"
                text="fffffffff"
                id="text13"
            />
        </titleContent>


        <!-- **************************************************** -->





        <content>
            <sap.m:Table
                noDataText="Drop column list items here and columns in the area above"
                xmlns:sap.m="sap.m"
                id="table0"
            >
                <sap.m:items>
                    <sap.m:ColumnListItem
                        type="Active"
                        id="item0"
                    >
                        <sap.m:cells>
                            <sap.m:Text
                                text="Row 1 Cell 1"
                                id="text5"
                            />

                            <sap.m:Text
                                text="Row 1 Cell 2"
                                id="text6"
                            />

                            <sap.m:Text
                                text="Row 1 Cell 3"
                                id="text7"
                            />
                        </sap.m:cells>
                    </sap.m:ColumnListItem>
                </sap.m:items>

                <sap.m:columns>
                    <sap.m:Column id="column0">
                        <sap.m:header>
                            <sap.m:Label
                                text="Header 1"
                                id="label0"
                            />
                        </sap.m:header>
                    </sap.m:Column>

                    <sap.m:Column id="column1">
                        <sap.m:header>
                            <sap.m:Label
                                text="Header 2"
                                id="label1"
                            />
                        </sap.m:header>
                    </sap.m:Column>

                    <sap.m:Column id="column2">
                        <sap.m:header>
                            <sap.m:Label
                                text="Header 3"
                                id="label2"
                            />
                        </sap.m:header>
                    </sap.m:Column>
                </sap.m:columns>
            </sap.m:Table>

        </content>

    </SemanticPage>

</mvc:View>
